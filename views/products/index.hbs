{{#extends 'base'}}
{{#block 'content'}}
<h1>products</h1>
<a href="/products/create" class="btn btn-primary">new</a>
<table class="table">
    <thead>
        <tr>
            <th>name</th>
            <th>description</th>
            <th>category</th>
            <th>cost</th>
            <th>tags</th>
            <th>image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.category.name}}</td>
            <td>{{divide this.cost 100}}</td>
            <td>
                {{#each this.tags}}
                    <span class="badge bg-primary">{{this.name}}</span>
                {{/each}}
            </td>
            <td>
                <img src="{{this.image_url}}" style="height: 100px"/>
            </td>
            <td><a href='/products/{{this.id}}/update' class="btn btn-dark">update</a>
            <a href='/products/{{this.id}}/delete' class="btn btn-danger">delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}